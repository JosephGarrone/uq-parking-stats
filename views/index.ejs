<%- include shared/head.ejs %>

<div class="container">
    <div class="section">

        <div class="row">
            <div class="col s12 m12 l8">
                <h5>
                    Parking Stats
                </h5>
            </div>
                
            <div class="input-field col s6 m6 l2">
                <select id="car-park">
                    <option value="" disabled>Select carpark</option>
                    <option value="all">All Carparks</option>
                    <option value="casual">All Casual</option>
                    <option value="permits">All Permits</option>
                    <% for (var i = 0; i < carParks.length; i++) { %>
                        <option value="<%= carParks[i].id %>" <%= i == 0 ? "selected" : "" %>><%= carParks[i].name %></option>
                    <% } %>
                </select>
            </div>
            
            <div class="input-field col s6 m6 l2">
                <input id="view-date" type="date" class="datepicker" placeholder="Pick a date">
            </div>
                
            <div class="col s12 m12 l12 center-align">
                <div id="refresh" class="orange waves-effect waves-light btn"><i class="material-icons left">loop</i><span>Refresh</span></div>
            </div>
        </div>
        
        <div class="row">
            <div class="col s12 m12 l12">
                <div class="center-align" id="loader">
                    <div class="preloader-wrapper big active">
                        <div class="spinner-layer spinner-blue-only">
                            <div class="circle-clipper left">
                                <div class="circle"></div>
                            </div>
                            <div class="gap-patch">
                                <div class="circle"></div>
                            </div>
                            <div class="circle-clipper right">
                                <div class="circle"></div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div id="graph"></div>
                
                <h5 id="no-data" class="blue-text lighten-2 center-align hide">No data available</h5>
            </div>
        </div>

    </div>
</div>

<%- include shared/foot.ejs %>